# syntax=docker/dockerfile:1
# 复用第七行的缓存
# Step 1: build golang binary
FROM golang:1.22.1 as builder
WORKDIR /opt/app
COPY go.* .
RUN go mod download
COPY . .
RUN go build -o example

# Step 2: copy binary from step1
FROM ubuntu:latest
WORKDIR /opt/app
COPY --from=builder /opt/app/example ./example
CMD ["/opt/app/example"]